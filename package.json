{
    "name": "crx-livereload",
    "version": "0.0.1",
    "description": "Chrome Extension Live Reloader",
    "author": "iamogbz",
    "repository": {
        "type": "git",
        "url": "https://github.com/iamogbz/crx-livereload"
    },
    "bugs": {
        "url": "https://github.com/iamogbz/crx-livereload/issues"
    },
    "homepage": "https://github.com/iamogbz/crx-livereload#readme",
    "license": "GPL-3.0",
    "keywords": [
        "chrome",
        "extension",
        "plugin",
        "chrome extension",
        "chrome plugin",
        "hot reload",
        "auto reload",
        "live reload",
        "file monitor",
        "watchdog",
        "watch code",
        "reload",
        "crx"
    ],
    "engines": {
        "node": ">=8",
        "npm": ">=6"
    },
    "main": "lib/main.js",
    "scripts": {
        "commitlint": "commitlint-travis",
        "build": "webpack --mode=production",
        "build-watch": "webpack --mode=development  --watch",
        "test": "jest",
        "test-watch": "jest --watch",
        "coveralls": "cat ./artifacts/coverage/lcov.info | coveralls",
        "typecheck": "tsc --noEmit",
        "commit": "git-cz",
        "release": "semantic-release"
    },
    "release": {
        "dryRun": true,
        "plugins": [
            "@semantic-release/commit-analyzer",
            "@semantic-release/release-notes-generator",
            "@semantic-release/github",
            "@semantic-release/npm"
        ]
    },
    "jest": {
        "preset": "ts-jest",
        "moduleDirectories": [
            "./src",
            "./tests",
            "./node_modules"
        ],
        "setupFilesAfterEnv": [
            "./tests/setup.ts"
        ],
        "testPathIgnorePatterns": [
            "./artifacts/",
            "./node_modules/"
        ],
        "coverageDirectory": "./artifacts/coverage"
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "linters": {
            "*.js": [
                "eslint"
            ],
            "*.ts": [
                "tslint"
            ],
            "*.{js,ts}": [
                "jest --bail --findRelatedTests"
            ]
        },
        "ignore": [
            "**/lib/*"
        ]
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "devDependencies": {
        "@babel/cli": "^7.2.3",
        "@babel/core": "^7.3.4",
        "@babel/preset-env": "^7.4.4",
        "@babel/preset-typescript": "^7.3.3",
        "@commitlint/cli": "^8.0.0",
        "@commitlint/config-conventional": "^8.0.0",
        "@commitlint/travis-cli": "^8.0.0",
        "@semantic-release/github": "^5.4.0",
        "@types/chrome": "0.0.86",
        "@types/copy-webpack-plugin": "^5.0.0",
        "@types/jest": "^24.0.9",
        "@types/node": "^12.0.10",
        "@types/sinon-chrome": "^2.2.6",
        "@types/source-map": "^0.5.2",
        "@types/webpack": "^4.4.25",
        "acorn": "^6.1.1",
        "babel-eslint": "^10.0.1",
        "babel-loader": "^8.0.5",
        "babel-runtime": "^6.26.0",
        "commitizen": "^3.0.7",
        "coveralls": "^3.0.3",
        "cz-conventional-changelog": "^2.1.0",
        "eslint": "^6.0.0",
        "eslint-config-airbnb": "^17.1.0",
        "eslint-config-prettier": "^5.0.0",
        "eslint-plugin-import": "^2.16.0",
        "eslint-plugin-jsx-a11y": "^6.2.1",
        "eslint-plugin-prettier": "^3.0.1",
        "eslint-plugin-react": "^7.12.4",
        "husky": "^2.1.0",
        "jest": "^24.1.0",
        "lint-staged": "^8.1.4",
        "prettier": "^1.16.4",
        "prettier-eslint": "^9.0.0",
        "prettier-tslint": "^0.4.2",
        "rxjs": "^6.4.0",
        "semantic-release": "^15.13.16",
        "sinon-chrome": "^3.0.1",
        "stylelint": "^10.0.0",
        "stylelint-config-standard": "^18.3.0",
        "stylelint-config-styled-components": "^0.1.1",
        "stylelint-processor-styled-components": "^1.6.0",
        "ts-jest": "^24.0.0",
        "ts-node": "^8.0.2",
        "tslint": "^5.13.0",
        "typescript": "^3.4.5",
        "webpack": "^4.29.6",
        "webpack-cli": "^3.2.3"
    }
}
